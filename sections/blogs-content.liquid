<script type="text/javascript">
var pagination = {
    page: getPage(),
    perPage: 1,
    totalPage: `{{ blog.articles_count }}`
};
function getPage() {
    var queryString = window.location.search;

    if (queryString) {
        var urlParams = new URLSearchParams(queryString);

        return urlParams.get('page');
    }

    return 1;
}
function renderPagination(pages) {
    try {
        if (pages <= 1) {
            throw 'noPagination';
        }
        var paginate = `<ul class="pagination">`;

        // previous
        var active = pagination.page == 1 ? 'style="pointer-events: none;"' : '';
        paginate += `
        <li class="page-item">
            <a class="page-link" ${active} href="javascript:void(0)" aria-label="Previous" onclick="getPagination(paginate.page - 1)">
                <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
                <span class="sr-only">Previous</span>
            </a>
        </li>`;

        for (var i = 1; i <= pages; i++) {
            active = i == pagination.page ? 'active' : '';
            paginate += `<li class="page-item ${active}"><a class="page-link" href="javascript:void(0)">${i}</a></li>`;
        }

        // next
        active = pagination.page == pages ? 'style="pointer-events: none;"' : '';
        paginate += `
        <li class="page-item">
            <a class="page-link" ${active} href="javascript:void(0)" aria-label="Next" onclick="getPagination(paginate.page + 1)">
                <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
                <span class="sr-only">Next</span>
            </a>
        </li>`;

        paginate += '</ul>';

        document.querySelector('#renderPagination').innerHTML = paginate;
    } catch(e) {
        // statements
        console.log(e);
    }
}
window.addEventListener('load', async () => {
    // paginate
    pages = Math.ceil(parseInt(pagination.totalPage)/pagination.perPage);
    renderPagination(pages);
});
</script>
