{% if section.blocks != empty %}
<div class="container">
    <h2 class="ttl-01">Product review</h2>
    {% for block in section.blocks %}
    {% assign product = block.settings.product %}
    <div class="product-review js-review">
        <div>
            <div class="product-review__item">
                <div class="d-flex">
                    <div class="product-review__img">
                        {% assign image = product.featured_image %}
                        <div> {{ image | image_url: width: 175, crop: 'center' | image_tag: loading: 'lazy', alt: image.alt }} </div>
                        {{ product.title | link_to: product.url }}
                        <div class="rating">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                        </div>
                    </div>
                    <div class="product-review__info">
                        <h3>Buttery smooth</h3>
                        <p>I use these everyday and they work great. I love the internal screwing that
                            allows
                            them to stay in place.</p>
                        <p class="name">David P.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% schema %}
  {
    "name": "Product Reviews",
    "tag": "section",
    "class": "section-content-first review",
    "blocks": [
      {
        "type": "reviews",
        "name": "review",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "content",
            "type": "richtext",
            "label": "Content"
          },
          {
            "id": "author",
            "type": "text",
            "label": "Author"
          },
          {
            "id": "rate",
            "type": "range",
            "label": "Stars",
            "default": 5,
            "max": 5,
            "min": 0
          }
        ]
      }      
    ],
    "settings": []
  }
{% endschema %}

