{%- form 'customer_address', customer.new_address, aria-labelledBy: 'AddressNewHeading' -%}
    <div class="shipping__form">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressFirstName_new">First name</label>
                    <input 
                        id="AddressFirstName_new"
                        type="text"
                        name="address[first_name]" 
                        class="form-control form-control-line" 
                        autocomplete="given-name" 
                        data-required="true"
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressLastName_new">Last Name</label>
                    <input 
                        id="AddressFirstName_new"
                        type="text"  
                        name="address[last_name]" 
                        class="form-control form-control-line"
                        autocomplete="family-name" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressCompany_new">Company</label>
                    <input 
                        id="AddressCompany_new"
                        type="text"  
                        name="address[company]" 
                        class="form-control form-control-line"
                        autocomplete="organization" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressAddress1_new">Address</label>
                    <input 
                        id="AddressAddress1_new"
                        type="text"  
                        name="address[address1]" 
                        class="form-control form-control-line"
                        autocomplete="address-line1" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressAddress2_new">Apartment</label>
                    <input 
                        id="AddressAddress2_new"
                        type="text"  
                        name="address[address2]" 
                        class="form-control form-control-line"
                        autocomplete="address-line2" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressCity_new">City</label>
                    <input 
                        id="AddressCity_new"
                        type="text"  
                        name="address[city]" 
                        class="form-control form-control-line"
                        autocomplete="address-level2" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressCountry_new">Country</label>
                    <select 
                        id="AddressCountry_new" 
                        name="address[country]" 
                        class="form-control form-control-line" 
                        data-address-country-select 
                        data-address-id="new" 
                        autocomplete="country">
                        {{ all_country_option_tags }}
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressProvinceContainer_new">Province</label>
                    <select 
                        id="AddressProvinceContainer_new" 
                        name="address[province]" 
                        class="form-control form-control-line" 
                        autocomplete="address-level1">
                        {{ all_country_option_tags }}
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressZip_new">Postal Code/Zip</label>
                    <input 
                        id="AddressZip_new"
                        type="text"  
                        name="address[zip]" 
                        class="form-control form-control-line"
                        autocomplete="postal-code" 
                        data-required="true" 
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AddressPhone_new">Phone</label>
                    <input 
                        id="AddressPhone_new"
                        type="text"  
                        name="address[phone]" 
                        class="form-control form-control-line"
                        autocomplete="tel" 
                        data-required="true" 
                    />
                </div>
            </div>
            {{ form.set_as_default_checkbox }}
        </div>
    </div>
{%- endform -%}